{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "src",
    "paths": {
      "@portfolio-components/*": ["./shared/components/*"],
      "@utils/*": ["./utils/"],
      "@assets/*": ["./assets/*"],
      "@hooks": ["./hooks/"],
      "@styles/*": ["./styles/*"],
      "@helpers": ["./helpers/index"],
      "@pages": ["./pages/index"],
      "@routes": ["./routes/index"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
